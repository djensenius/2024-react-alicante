{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Launch React App",
        "type": "shell",
        "command": "npm start",
        "isBackground": true,
        "problemMatcher": [
          {
            "owner": "custom",
            "fileLocation": ["relative", "${workspaceFolder}"],
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
              "beginsPattern": ".",
              "endsPattern": "."
            }
          }
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        }
      },
      {
        "label": "Terminate React App",
        "type": "process",
        "command": "pkill",
        "args": ["-f", "webpack"],
        "problemMatcher": []
      },
      {
        "label": "Launch Storybook",
        "type": "npm",
        "script": "storybook",
        "isBackground": true,
        "problemMatcher": [
          {
            "owner": "custom",
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
              "beginsPattern": ".*",
              "endsPattern": ".*"
            }
          }
        ]
      }
    ]
  }